# Virtual envs
Host *ngs.ru*.t*
    User root
    IdentityFile ~/.ssh/env_key
    StrictHostKeyChecking no
    UserKnownHostsFile /dev/null
Host *ngs.ru*.d
    User root
    IdentityFile ~/.ssh/env_key
    StrictHostKeyChecking no
    UserKnownHostsFile /dev/null
Host 192.168.20.*
    User root
    IdentityFile ~/.ssh/env_key
    StrictHostKeyChecking no
    UserKnownHostsFile /dev/null
Host 192.168.21.*
    User root
    IdentityFile ~/.ssh/env_key
    StrictHostKeyChecking no
    UserKnownHostsFile /dev/null
Host 192.168.22.*
    User root
    IdentityFile ~/.ssh/env_key
    StrictHostKeyChecking no
    UserKnownHostsFile /dev/null
Host .*
    HostName        ngs.ru%h
	User            root
    IdentityFile ~/.ssh/env_key
    StrictHostKeyChecking no
    UserKnownHostsFile /dev/null

Host *.in.ngs.ru
    User ngs

# dbfarm hosts
Host db*.*
	HostName %h
    User root
Host db*
	HostName %h.farm.s
    User root

